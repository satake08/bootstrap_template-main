<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">  <!-- この行を追加23章2 -->
  <div class="row">      <!-- この行を追加23章2 -->
      <!-- 以下を追加23章3 -->
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    
    <div class="col-lg-8">  <!-- この行を追加23章4 -->
      <table class="table table-striped"><!--class="table table-striped"追加23章1-->
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= post.author %></td>
           
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  <!-- この行を追加23章4 -->
  </div>  <!-- この行を追加23章2 -->
</div>    <!-- この行を追加23章2 -->

<br>

